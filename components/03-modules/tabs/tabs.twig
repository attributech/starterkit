<nav class="tabs">
  <h2 class="visually-hidden">{{ 'Primary tabs'|t }}</h2>
  <ul class="tab-list">
    {% for item in items %}
      {% if item['#active'] %}
        <li class="tab-list__item tab-list__item--active"> {{ item }}</li>
      {% else %}
        <li class="tab-list__item">{{ item }}</li>
      {% endif %}
    {% endfor %}
  </ul>
</nav>

